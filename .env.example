# App Store Connect API Configuration
# Copy this file to .env and fill in your actual values

# Required: Your App Store Connect Issuer ID
# Found in App Store Connect > Users and Access > Keys
APP_STORE_CONNECT_ISSUER_ID=your-issuer-id-here

# Required: Your App Store Connect Key ID
# The ID of the API key you created
APP_STORE_CONNECT_KEY_ID=your-key-id-here

# Required: Path to your App Store Connect private key file (.p8)
# Download from App Store Connect when creating the API key
APP_STORE_CONNECT_PRIVATE_KEY_PATH=/path/to/your/private-key.p8

# Optional: Your App Store Connect Team ID
# Found in App Store Connect > Membership
APP_STORE_CONNECT_TEAM_ID=your-team-id-here

# Optional: Default timeout for API requests (in seconds)
# Default: 30
API_REQUEST_TIMEOUT=30

# Optional: Enable debug logging
# Set to "true" to enable detailed logging
# Default: false
DEBUG_LOGGING=false

# Optional: API rate limit (requests per hour)
# Default: 50 (App Store Connect's default limit)
API_RATE_LIMIT=50

# Testing Configuration (for development only)
# WARNING: Do not use production credentials for testing

# Optional: Test environment base URL
# Only change if Apple provides a test environment
# Default: https://api.appstoreconnect.apple.com
TEST_API_BASE_URL=https://api.appstoreconnect.apple.com

# Optional: Skip SSL verification (ONLY for testing)
# WARNING: Never set to true in production
# Default: false
TEST_SKIP_SSL_VERIFY=false